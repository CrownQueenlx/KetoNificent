@model KetoNificent.Models.User.UserRegister
@{
    ViewData["Title"] = "Register";
}

<div asp-validation-summary="All" class="text-danger"></div>
<div class="d-flex flex-wrap">
    <div class="col-12 col-md-6 offset-md-3">
        <h1 class="display-4 mb-3">Create Account</h1>

        <form asp-action="Register" method="post">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="UserName" placeholder="username">
                <label asp-for="UserName">Username</label>
                <span asp-valsidation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="Email" placeholder="email">
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                <label asp-for="Password">Password</label>
                <span asp-valsidation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm password">
                <label asp-for="ConfirmPassword">ConfirmPassword</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column gap-2">
                <button type="submit" class="btn btn-primary">Register</button>
                <a asp-action="Login" asp-controller="Account" class="text-center p-2">Already have an account?</a>
            </div>
        </form>
    </div>
</div>