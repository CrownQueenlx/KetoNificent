@model IEnumerable<KetoNificent.Models.Product.ProductIndexVM>
@{
    ViewData["Title"] = "Customize a Drink";
}

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>ERROR:</strong>@TempData["ErrorMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1 class="display-4 text-center">Customize</h1>
<h1 class="display-4 text-center" style="font-size: small;">a drink or dish</h1>


<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1>Product Name List</h1>
  <table class="table table-striped border">
    <thead>
        <td>Id</td>
        <td>Name</td>
        <td>UserId</td>
    </thead>
   <div class="box scrollable-list" style="height: 50px; overflow: auto;">
        <tbody>
            @* input with radio type *@
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.UserId</td>
            </tr>
            }
        </tbody>
</Table>
        </div>



