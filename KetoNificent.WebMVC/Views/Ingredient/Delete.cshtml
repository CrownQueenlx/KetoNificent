@model KetoNificent.Models.Ingredient.IngredientDeleteVM
{
    ViewData["Title"] = Delete an Ingredient
}
<h2>Confirm Delete</h2>
<p>
    Are you sure you want to delete this product?
</p>
<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product ID<dt>
            <dd class="col-sm-2">@Model.Id<dd>
        <dt class="col-sm-2">Product Name<dt>
            <dd class="col-sm-2">@Model.Name<dd>
    </dl>
</div>
<form asp-action="DeleteConfirmend" asp-route-id="@Model.Id">
<div class="form-group">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>
</form>